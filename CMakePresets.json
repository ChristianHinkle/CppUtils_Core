{
    "version": 10,
    "cmakeMinimumRequired": {
        "major": 4,
        "minor": 0,
        "patch": 0
    },
    "$comment": [
        "Copyright (c) 2023-2025 Christian Hinkle, Brian Hinkle.",
        "Includes: We have includes of utility files search from the `${sourceDir}` (which is the top-level project's directory), so that it's the responsibility of the top-level project to provide these files. We do this to avoid multiple includes to duplicate files. CMake throws an error if a preset is defined twice with the same name, but it does allow duplicate includes to the same file."
    ],
    "include": [
        "${sourceDir}/GeneralCMakePresets/GeneralPresets.json"
    ],
    "testPresets": [
        {
            "name": "cpputils-core-base",
            "hidden": true,
            "filter": {
                "include": {
                    "name": "CppUtils.Core."
                }
            }
        },
        {
            "name": "cpputils-core-win-debug",
            "displayName": "CppUtils.Core - Windows Debug",
            "inherits": [
                "cpputils-core-base",
                "win-debug"
            ]
        },
        {
            "name": "cpputils-core-win-release",
            "displayName": "CppUtils.Core - Windows Release",
            "inherits": [
                "cpputils-core-base",
                "win-release"
            ]
        },
        {
            "name": "cpputils-core-linux-debug",
            "displayName": "CppUtils.Core - Linux Debug",
            "inherits": [
                "cpputils-core-base",
                "linux-debug"
            ]
        },
        {
            "name": "cpputils-core-linux-release",
            "displayName": "CppUtils.Core - Linux Release",
            "inherits": [
                "cpputils-core-base",
                "linux-release"
            ]
        },
        {
            "name": "cpputils-core-macos-debug",
            "displayName": "CppUtils.Core - macOS Debug",
            "inherits": [
                "cpputils-core-base",
                "macos-debug"
            ]
        },
        {
            "name": "cpputils-core-macos-release",
            "displayName": "CppUtils.Core - macOS Release",
            "inherits": [
                "cpputils-core-base",
                "macos-release"
            ]
        }
    ]
}
